<features name="pentaho-karaf-features-enterprise" xmlns="http://karaf.apache.org/xmlns/features/v1.3.0">
  <repository>mvn:org.hitachivantara.karaf.features/spring43/${project.version}/xml/features</repository>
  <repository>mvn:org.pentaho/pentaho-requirejs-osgi-manager/${project.version}/xml/features</repository>
  <repository>mvn:com.pentaho.di.plugins/pentaho-ee-streaming-feature/${project.version}/xml/features</repository>

  <!-- pentaho-analyzer feature is using spring feature -->
  <repository>mvn:org.hitachivantara.karaf.features/spring32/${project.version}/xml/features</repository>

  <feature name="pentaho-client-ee" version="1.0">
    <feature prerequisite="true">pentaho-client</feature>
    <feature prerequisite="true">pentaho-ee-streaming-feature</feature>
    <bundle dependency="true">mvn:commons-collections/commons-collections/${commons.collections.version}</bundle>
  </feature>

  <feature name="pentaho-analyzer-prerequisites" version="1.0">
    <!-- Cannot be marked as dependency because paz-plugin-ce uses it via DynamicImport-Package -->
    <bundle>mvn:com.ibm.icu/icu4j/${icu4j.version}</bundle>
  </feature>

  <feature name="pentaho-analyzer" version="1.0">
    <feature prerequisite="true">pentaho-analyzer-prerequisites</feature>

    <!-- Spring-DM needed in Analyzer OSGI plugin to get Spring Application Context -->
    <feature prerequisite="true">spring-dm</feature>
    <feature prerequisite="true">pdi-platform</feature>
    <feature prerequisite="true" version="${project.version}">pentaho-requirejs-osgi-manager</feature>
    <bundle>wrap:mvn:pentaho/pentaho-connections/${pentaho-connections.version}</bundle>
    <bundle>mvn:pentaho/pentaho-analyzer-xsd/${analyzer-plugin.version}</bundle>

    <bundle>pentaho-platform-plugin:mvn:pentaho/paz-plugin-ce/${analyzer-plugin.version}/zip</bundle>
  </feature>

  <feature name="pentaho-monitoring" version="1.0">
    <configfile finalname="/etc/pentaho.pdi.monitoring.cfg">mvn:pentaho/pentaho-osgi-config/${project.version}/cfg/pdi-monitoring</configfile>
    <!-- <bundle>mvn:org.apache.camel/camel-guava-eventbus/${camel.guava.eventbus.version}</bundle> -->
    <bundle dependency="true">mvn:commons-beanutils/commons-beanutils/${commons.beanutils.version}</bundle>
    <bundle>mvn:pentaho/pentaho-monitoring-plugin/${pdi-monitoring-plugin.version}</bundle>
    <bundle dependency="true">mvn:commons-collections/commons-collections/${commons.collections.version}</bundle>
  </feature>

  <feature name="pentaho-monitoring-camel-base" version="1.0">
    <feature prerequisite="true">camel</feature>
    <feature prerequisite="true">camel-blueprint</feature>
    <feature prerequisite="true">camel-stream</feature>
    <feature prerequisite="true" version="${camel.guava.eventbus.version}-pentaho">camel-guava-eventbus</feature>
    <bundle dependency="true">mvn:commons-beanutils/commons-beanutils/${commons.beanutils.version}</bundle>
    <bundle>mvn:pentaho/pentaho-camel-core/${pentaho-camel.version}</bundle>
    <bundle>mvn:pentaho/pentaho-camel-snmp/${pentaho-camel.version}</bundle>
    <bundle dependency="true">mvn:commons-collections/commons-collections/${commons.collections.version}</bundle>
  </feature>

  <feature name="pentaho-monitoring-to-snmp" version="1.0">
    <configfile finalname="/etc/pentaho.snmp.cfg">mvn:pentaho/pentaho-osgi-config/${project.version}/cfg/snmp</configfile>
    <feature prerequisite="true">pentaho-monitoring</feature>
    <feature prerequisite="true">pentaho-monitoring-camel-base</feature>
    <bundle start-level="90">wrap:blueprint:mvn:pentaho/pentaho-blueprint-activators/${project.version}/xml/monitoring-snmp$overwrite=merge&amp;Import-Package=com.google.common.eventbus;version="[17.0,17.0]"</bundle>
    <bundle dependency="true">mvn:commons-collections/commons-collections/${commons.collections.version}</bundle>
  </feature>

  <feature name="pentaho-monitoring-to-jms" version="1.0">
    <feature prerequisite="true">pentaho-monitoring</feature>
    <feature prerequisite="true">pentaho-monitoring-camel-base</feature>
    <feature prerequisite="true">pentaho-camel-jms</feature>
    <bundle start-level="90">blueprint:mvn:pentaho/pentaho-blueprint-activators/${project.version}/xml/monitoring-jms</bundle>
    <bundle dependency="true">mvn:commons-collections/commons-collections/${commons.collections.version}</bundle>
  </feature>

  <feature name="pentaho-monitoring-jms-broker" version="1.0">
    <feature prerequisite="true">pentaho-monitoring</feature>
    <feature prerequisite="true">pentaho-monitoring-camel-base</feature>
    <feature prerequisite="true">pentaho-camel-jms</feature>
    <bundle start-level="90">blueprint:mvn:pentaho/pentaho-blueprint-activators/${project.version}/xml/monitoring-jms-broker</bundle>
    <bundle dependency="true">mvn:commons-collections/commons-collections/${commons.collections.version}</bundle>
  </feature>

  <!-- Overriding camel-guava-eventbus feature to force using guava-17.0 version -->
  <feature name="camel-guava-eventbus" version="${camel.guava.eventbus.version}-pentaho" start-level="50">
    <feature prerequisite="true" version="${camel.karaf.version}">camel-core</feature>
    <bundle dependency="true">mvn:com.google.guava/guava/17.0</bundle>
    <bundle>mvn:pentaho/pentaho-camel-guava-eventbus/${project.version}</bundle>
  </feature>

</features>
