<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>pentaho</groupId>
    <artifactId>pentaho-karaf</artifactId>
    <version>7.1-SNAPSHOT</version>
  </parent>
  <groupId>pentaho</groupId>
  <artifactId>pentaho-karaf-assembly</artifactId>
  <version>7.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <properties>
    <eigenbase.xom.version>1.3.5</eigenbase.xom.version>
    <commons.lang.version>2.6</commons.lang.version>
    <commons.beanutils.version>1.9.2</commons.beanutils.version>
    <com.github.zafarkhaja.version>0.9.0</com.github.zafarkhaja.version>
    <commons.logging.version>1.1.3</commons.logging.version>
    <karaf-maven-plugin.version>3.0.3</karaf-maven-plugin.version>
    <commons.collections.version>3.2.2</commons.collections.version>
    <plugin.org.apache.maven.plugins.maven-clean-plugin.version>2.5</plugin.org.apache.maven.plugins.maven-clean-plugin.version>
    <plugin.org.apache.maven.plugins.maven-resources-plugin.version>2.7</plugin.org.apache.maven.plugins.maven-resources-plugin.version>
    <activemq.karaf.version>5.10.0</activemq.karaf.version>
    <org.apache.mina.version>2.0.7</org.apache.mina.version>
    <commons.io.version>2.4</commons.io.version>
    <org.ops4j.pax.web.version>3.1.4</org.ops4j.pax.web.version>
    <jfree.jcommon.version>1.0.14</jfree.jcommon.version>
    <org.codehaus.jackson.version>1.9.13</org.codehaus.jackson.version>
    <com.tinkerpop.version>2.6.0</com.tinkerpop.version>
    <camel.karaf.version>2.14.3</camel.karaf.version>
    <org.apache.felix.http.version>2.3.2</org.apache.felix.http.version>
    <google.guava.version>17.0</google.guava.version>
    <cxf.karaf.version>3.0.7</cxf.karaf.version>
    <eigenbase.properties.version>1.1.4</eigenbase.properties.version>
    <plugin.org.apache.maven.plugins.maven-assembly-plugin.version>2.4</plugin.org.apache.maven.plugins.maven-assembly-plugin.version>
    <json.simple.version>1.1.1</json.simple.version>
    <olap4j.xmlaserver.version>1.2.0</olap4j.xmlaserver.version>
    <org.ehcache.version>1.0.0</org.ehcache.version>
    <package.features>true</package.features>
    <karaf.features.version>3.0.3</karaf.features.version>
    <plugin.org.apache.maven.plugins.maven-dependency-plugin.version>2.10</plugin.org.apache.maven.plugins.maven-dependency-plugin.version>
    <net.sf.ehcache.version>2.8.3</net.sf.ehcache.version>
    <osgi.over.slf4j.version>1.7.7</osgi.over.slf4j.version>
    <camel.guava.eventbus.version>2.14.3</camel.guava.eventbus.version>
    <plugin.org.codehaus.mojo.build-helper-maven-plugin.version>1.5</plugin.org.codehaus.mojo.build-helper-maven-plugin.version>
    <eigenbase.resgen.version>1.3.6</eigenbase.resgen.version>
    <com.fasterxml.jackson.core.version>2.3.3</com.fasterxml.jackson.core.version>
    <karaf.version>3.0.3</karaf.version>

    <configuration-bundles.classifier>configuration-bundle</configuration-bundles.classifier>
    <configuration-bundles.unpacked>target/configuration-bundles</configuration-bundles.unpacked>
    <configuration-bundles.target>config</configuration-bundles.target>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.apache.karaf</groupId>
      <artifactId>apache-karaf</artifactId>
      <version>${karaf.version}</version>
      <type>tar.gz</type>
      <scope>runtime</scope>
      <exclusions>
        <exclusion>
          <artifactId>org.eclipse.osgi</artifactId>
          <groupId>org.eclipse</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>standard</artifactId>
      <version>${karaf.features.version}</version>
      <type>xml</type>
      <classifier>features</classifier>
    </dependency>

    <dependency>
      <groupId>org.pentaho</groupId>
      <artifactId>common-ui-impl-client-config</artifactId>
      <version>${project.version}</version>
      <classifier>${configuration-bundles.classifier}</classifier>
    </dependency>
  </dependencies>
  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-http</artifactId>
        <version>2.9</version>
      </extension>
    </extensions>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${project.basedir}/src/main/filtered-resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>${plugin.org.apache.maven.plugins.maven-resources-plugin.version}</version>
        <executions>
          <execution>
            <id>filter</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
        </executions>
        <inherited>false</inherited>
      </plugin>

      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <!-- any reason for not upgrading the version to 3.0.0? -->
        <!-- and why isn't it using the parent pom's ${maven-dependency-plugin.version} -->
        <version>${plugin.org.apache.maven.plugins.maven-dependency-plugin.version}</version>

        <executions>

          <execution>
            <id>unpack</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>

            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.apache.karaf</groupId>
                  <artifactId>apache-karaf</artifactId>
                  <type>tar.gz</type>
                  <outputDirectory>target/dependencies</outputDirectory>
                </artifactItem>

                <!-- unpack each configuration-bundle dependency -->
                <artifactItem>
                  <groupId>org.pentaho</groupId>
                  <artifactId>common-ui-impl-client-config</artifactId>
                  <version>${project.version}</version>
                  <classifier>${configuration-bundles.classifier}</classifier>
                  <outputDirectory>${configuration-bundles.unpacked}/web-client</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>

          <!-- this would be more "fun", but currently we're unable to strip both the classifier and the type
          from the artifact folder name (https://issues.apache.org/jira/browse/MDEP-505) so it gets pretty ugly -->
          <!-- execution>
            <id>unpack-configuration-bundles</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>${configuration-bundles.classifier}</classifier>
              <outputDirectory>${configuration-bundles.unpacked}</outputDirectory>
              <useSubDirectoryPerArtifact>true</useSubDirectoryPerArtifact>
              <stripClassifier>true</stripClassifier>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution -->

        </executions>

        <inherited>false</inherited>
      </plugin>

      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
        <version>${karaf-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>add-features</id>
          </execution>
          <execution>
            <id>add-features-to-client-repo</id>
            <phase>package</phase>
            <goals>
              <goal>features-add-to-repository</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>mvn:org.apache.karaf.features/standard/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/enterprise/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.cxf.karaf/apache-cxf/${cxf.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:pentaho/pentaho-karaf-features/${project.version}/xml/standard</descriptor>
                <descriptor>mvn:pentaho-karaf-features/pentaho-big-data-plugin-osgi/${project.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.activemq/activemq-karaf/${activemq.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.camel.karaf/apache-camel/${camel.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/spring/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.pentaho/pdi-marketplace/${project.version}/xml/features</descriptor>
                <descriptor>mvn:org.pentaho/repositories-plugin/${project.version}/xml/features</descriptor>
              </descriptors>
              <features>
                <feature>config</feature>
                <feature>ssh</feature>
                <feature>kar</feature>
                <feature>http</feature>
                <feature>cxf</feature>
                <feature>war</feature>
                <feature>pentaho-base</feature>
                <feature>pentaho-client</feature>
                <feature>pdi-dataservice</feature>
                <feature>pentaho-metaverse</feature>
                <feature>pdi-marketplace</feature>
                <feature>build-helper</feature>
                <feature>pdi-data-refinery</feature>
                <feature>pentaho-spoon</feature>
                <feature>repositories-plugin</feature>
              </features>
              <repository>target/pentaho-client-features-repo</repository>
            </configuration>
          </execution>
          <execution>
            <id>add-features-to-pme-repo</id>
            <phase>package</phase>
            <goals>
              <goal>features-add-to-repository</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>mvn:org.apache.karaf.features/standard/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/enterprise/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.cxf.karaf/apache-cxf/${cxf.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:pentaho/pentaho-karaf-features/${project.version}/xml/standard</descriptor>
                <descriptor>mvn:pentaho-karaf-features/pentaho-big-data-plugin-osgi/${project.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.activemq/activemq-karaf/${activemq.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.camel.karaf/apache-camel/${camel.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/spring/${karaf.features.version}/xml/features</descriptor>
              </descriptors>
              <features>
                <feature>config</feature>
                <feature>ssh</feature>
                <feature>kar</feature>
                <feature>http</feature>
                <feature>cxf</feature>
                <feature>war</feature>
                <feature>pentaho-client-minimal</feature>
                <feature>pdi-dataservice-client</feature>
                <feature>pentaho-big-data-plugin-testless-osgi</feature>
                <feature>build-helper</feature>
                <feature>pdi-data-refinery</feature>
              </features>
              <repository>target/pentaho-pme-features-repo</repository>
            </configuration>
          </execution>
          <execution>
            <id>add-features-to-server-repo</id>
            <phase>package</phase>
            <goals>
              <goal>features-add-to-repository</goal>
            </goals>
            <configuration>
              <includeMvnBasedDescriptors>true</includeMvnBasedDescriptors>
              <addTransitiveFeatures>true</addTransitiveFeatures>
              <descriptors>
                <descriptor>mvn:org.apache.karaf.features/standard/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/enterprise/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:pentaho-karaf-features/pentaho-big-data-plugin-osgi/${project.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.cxf.karaf/apache-cxf/${cxf.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:pentaho/pentaho-karaf-features/${project.version}/xml/standard</descriptor>
                <descriptor>mvn:pentaho/pentaho-karaf-features/${project.version}/xml/server</descriptor>
                <descriptor>mvn:org.apache.activemq/activemq-karaf/${activemq.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.camel.karaf/apache-camel/${camel.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/spring/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.pentaho/pentaho-marketplace/${project.version}/xml/features</descriptor>
              </descriptors>
              <features>
                <feature>config</feature>
                <feature>ssh</feature>
                <feature>management</feature>
                <feature>kar</feature>
                <feature>cxf</feature>
                <feature>camel-jms</feature>
                <feature>camel</feature>
                <feature>camel-blueprint</feature>
                <feature>camel-stream</feature>
                <feature>http</feature>
                <feature>pentaho-server</feature>
                <feature>pentaho-metaverse</feature>
                <feature>pdi-dataservice</feature>
                <feature>pentaho-marketplace</feature>
                <feature>build-helper</feature>
                <feature>pdi-data-refinery</feature>
              </features>
              <repository>target/pentaho-server-features-repo</repository>
            </configuration>
          </execution>
          <execution>
            <id>add-features-to-pmr-repo</id>
            <phase>package</phase>
            <goals>
              <goal>features-add-to-repository</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>mvn:org.apache.karaf.features/standard/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/enterprise/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.cxf.karaf/apache-cxf/${cxf.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:pentaho/pentaho-karaf-features/${project.version}/xml/standard</descriptor>
                <descriptor>mvn:pentaho-karaf-features/pentaho-big-data-plugin-osgi/${project.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.activemq/activemq-karaf/${activemq.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.camel.karaf/apache-camel/${camel.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/spring/${karaf.features.version}/xml/features</descriptor>
              </descriptors>
              <features>
                <feature>config</feature>
                <feature>ssh</feature>
                <feature>kar</feature>
                <feature>http</feature>
                <feature>cxf</feature>
                <feature>war</feature>
                <feature>pentaho-base</feature>
                <feature>pentaho-client</feature>
                <feature>build-helper</feature>
              </features>
              <repository>target/pentaho-pmr-features-repo</repository>
            </configuration>
          </execution>
          <execution>
            <id>add-features-to-prd-repo</id>
            <phase>package</phase>
            <goals>
              <goal>features-add-to-repository</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>mvn:org.apache.karaf.features/standard/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/enterprise/${karaf.features.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.cxf.karaf/apache-cxf/${cxf.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:pentaho/pentaho-karaf-features/${project.version}/xml/standard</descriptor>
                <descriptor>mvn:pentaho-karaf-features/pentaho-big-data-plugin-osgi/${project.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.activemq/activemq-karaf/${activemq.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.camel.karaf/apache-camel/${camel.karaf.version}/xml/features</descriptor>
                <descriptor>mvn:org.apache.karaf.features/spring/${karaf.features.version}/xml/features</descriptor>
              </descriptors>
              <features>
                <feature>config</feature>
                <feature>ssh</feature>
                <feature>kar</feature>
                <feature>http</feature>
                <feature>cxf</feature>
                <feature>war</feature>
                <feature>pentaho-client-minimal</feature>
                <feature>pdi-dataservice-client</feature>
                <feature>pentaho-big-data-plugin-testless-osgi</feature>
                <feature>build-helper</feature>
                <feature>pdi-data-refinery</feature>
              </features>
              <repository>target/pentaho-prd-features-repo</repository>
            </configuration>
          </execution>
        </executions>
        <inherited>false</inherited>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>${plugin.org.apache.maven.plugins.maven-assembly-plugin.version}</version>
        <executions>
          <execution>
            <id>client</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/descriptors/pentaho-client-assembly.xml</descriptor>
              </descriptors>
              <finalName>${project.artifactId}</finalName>
              <appendAssemblyId>true</appendAssemblyId>
            </configuration>
          </execution>
          <execution>
            <id>pme</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/descriptors/pentaho-pme-assembly.xml</descriptor>
              </descriptors>
              <finalName>${project.artifactId}</finalName>
              <appendAssemblyId>true</appendAssemblyId>
            </configuration>
          </execution>
          <execution>
            <id>server</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/descriptors/pentaho-server-assembly.xml</descriptor>
              </descriptors>
              <finalName>${project.artifactId}</finalName>
              <appendAssemblyId>true</appendAssemblyId>
            </configuration>
          </execution>
          <execution>
            <id>pmr</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/descriptors/pentaho-pmr-assembly.xml</descriptor>
              </descriptors>
              <finalName>${project.artifactId}</finalName>
              <appendAssemblyId>true</appendAssemblyId>
            </configuration>
          </execution>
          <execution>
            <id>prd</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/descriptors/pentaho-prd-assembly.xml</descriptor>
              </descriptors>
              <finalName>${project.artifactId}</finalName>
              <appendAssemblyId>true</appendAssemblyId>
            </configuration>
          </execution>
        </executions>
        <inherited>false</inherited>
      </plugin>
    </plugins>
  </build>
</project>
