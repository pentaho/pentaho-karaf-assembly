<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.pentaho</groupId>
    <artifactId>pentaho-ce-parent-pom</artifactId>
    <version>8.2.0.0-SNAPSHOT</version>
  </parent>
  <groupId>pentaho</groupId>
  <artifactId>pentaho-karaf</artifactId>
  <version>8.2.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <modules>
    <module>pentaho-karaf-features</module>
    <module>pentaho-blueprint-activators</module>
    <module>pentaho-osgi-config</module>
    <module>pentaho-karaf-assembly</module>
    <module>overrides</module>
  </modules>

  <properties>
    <mongo.java.driver.version>3.6.3</mongo.java.driver.version>
    <org.ehcache.version>1.0.0</org.ehcache.version>
    <pdi-data-refinery-plugin.version>8.2.0.0-SNAPSHOT</pdi-data-refinery-plugin.version>
    <org.apache.felix.http.version>2.3.2</org.apache.felix.http.version>
    <plugin.org.apache.maven.plugins.maven-clean-plugin.version>2.5
    </plugin.org.apache.maven.plugins.maven-clean-plugin.version>
    <pentaho-mongo-utils.version>8.2.0.0-SNAPSHOT</pentaho-mongo-utils.version>
    <karaf.version>3.0.3</karaf.version>
    <karaf-maven-plugin.aggregateFeatures>false</karaf-maven-plugin.aggregateFeatures>
    <plugin.org.apache.maven.plugins.maven-resources-plugin.version>2.7
    </plugin.org.apache.maven.plugins.maven-resources-plugin.version>
    <commons.beanutils.version>1.9.3</commons.beanutils.version>
    <package.features>true</package.features>
    <commons.collections.version>3.2.2</commons.collections.version>
    <commons-compress.version>1.14</commons-compress.version>
    <org.apache.mina.version>2.0.7</org.apache.mina.version>
    <com.tinkerpop.version>2.6.0</com.tinkerpop.version>
    <camel.guava.eventbus.version>2.17.7</camel.guava.eventbus.version>
    <karaf-maven-plugin.version>3.0.3</karaf-maven-plugin.version>
    <eigenbase.properties.version>1.1.4</eigenbase.properties.version>
    <eigenbase.resgen.version>1.3.6</eigenbase.resgen.version>
    <activemq.karaf.version>5.10.0</activemq.karaf.version>
    <camel.karaf.version>2.17.7</camel.karaf.version>
    <camel.overriden.karaf.version>2.17.7-pentaho</camel.overriden.karaf.version>
    <olap4j.xmlaserver.version>1.2.0</olap4j.xmlaserver.version>
    <google.guava.version>17.0</google.guava.version>
    <jfree.jcommon.version>1.0.14</jfree.jcommon.version>
    <cxf.karaf.version>3.0.13</cxf.karaf.version>
    <cxf.karaf.patched.version>3.0.13-pentaho</cxf.karaf.patched.version>
    <pentaho-camel.version>8.2.0.0-SNAPSHOT</pentaho-camel.version>
    <pdi-monitoring-plugin.version>8.2.0.0-SNAPSHOT</pdi-monitoring-plugin.version>
    <pentaho-metaverse.version>8.2.0.0-SNAPSHOT</pentaho-metaverse.version>
    <commons.lang.version>2.6</commons.lang.version>
    <pentaho-osgi-bundles.version>8.2.0.0-SNAPSHOT</pentaho-osgi-bundles.version>
    <pdi.version>8.2.0.0-SNAPSHOT</pdi.version>
    <ael.version>8.2.0.0-SNAPSHOT</ael.version>
    <big-data-plugin.version>8.2.0.0-SNAPSHOT</big-data-plugin.version>
    <pentaho-hadoop-shims-hdp26.version>8.2.0.0-SNAPSHOT</pentaho-hadoop-shims-hdp26.version>
    <eigenbase.xom.version>1.3.5</eigenbase.xom.version>
    <osgi.over.slf4j.version>1.7.7</osgi.over.slf4j.version>
    <springframework-version>3.2.0</springframework-version>
    <karaf.features.version>3.0.3</karaf.features.version>
    <pentaho-modeler.version>8.2.0.0-SNAPSHOT</pentaho-modeler.version>
    <pentaho-marketplace-modules.version>8.2.0.0-SNAPSHOT</pentaho-marketplace-modules.version>
    <commons.logging.version>1.1.3</commons.logging.version>
    <pentaho-json.version>8.2.0.0-SNAPSHOT</pentaho-json.version>
    <pdi-osgi-bridge.version>8.2.0.0-SNAPSHOT</pdi-osgi-bridge.version>
    <pentaho-connections.version>8.2.0.0-SNAPSHOT</pentaho-connections.version>
    <analyzer-plugin.version>8.2.0.0-SNAPSHOT</analyzer-plugin.version>
    <org.ops4j.pax.web.version>3.1.4</org.ops4j.pax.web.version>
    <pentaho-mongodb-plugin.version>8.2.0.0-SNAPSHOT</pentaho-mongodb-plugin.version>
    <com.github.zafarkhaja.version>0.9.0</com.github.zafarkhaja.version>
    <json.simple.version>1.1.1</json.simple.version>
    <plugin.org.apache.maven.plugins.maven-assembly-plugin.version>2.4</plugin.org.apache.maven.plugins.maven-assembly-plugin.version>
    <commons.io.version>2.4</commons.io.version>
    <net.sf.ehcache.version>2.8.3</net.sf.ehcache.version>
    <net.java.dev.jna.version>4.4.0</net.java.dev.jna.version>
    <icu4j.version>54.1.1</icu4j.version>
    <javax.jms.version>1.1</javax.jms.version>
  </properties>


  <repositories>
    <repository>
      <id>pentaho-public</id>
      <name>Pentaho Public</name>
      <url>http://nexus.pentaho.org/content/groups/omni/</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>daily</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>interval:15</updatePolicy>
      </snapshots>
    </repository>
  </repositories>

  <profiles>
    <profile>
      <!-- This profile generates a feature file to deploy in karaf. -->
      <id>feature-generation</id>
      <activation>
        <file>
          <exists>${basedir}/src/main/feature</exists>
        </file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.karaf.tooling</groupId>
            <artifactId>karaf-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.karaf.tooling</groupId>
          <artifactId>karaf-maven-plugin</artifactId>
          <version>${karaf-maven-plugin.version}</version>
          <extensions>true</extensions>
          <configuration>
            <aggregateFeatures>${karaf-maven-plugin.aggregateFeatures}</aggregateFeatures>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
